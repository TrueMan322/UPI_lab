import pandas as pd

# Создание списка учебной группы
students = [
    {"фамилия": "Иванов", "имя": "Иван", "дата_рождения": "1998-05-15", "зачетка": [
        {"предмет": "Математика", "дата_экзамена": "2023-01-20", "преподаватель": "Петров"},
        {"предмет": "Физика", "дата_экзамена": "2023-02-10", "преподаватель": "Сидоров"}
    ]},
    # добавьте других студентов по аналогии
]

# Создание DataFrame из списка студентов
df = pd.DataFrame(students)

# Функция для сортировки студентов по предмету в зачетке
def sort_students_by_subject(subject):
    df_subject = df[df['зачетка'].apply(lambda x: any(d['предмет'] == subject for d in x))]
    sorted_df = df_subject.sort_values(by='фамилия')
    return sorted_df

# Вывод таблицы ФИО и даты рождения отсортированных студентов
sorted_students = sort_students_by_subject("Математика")
print(sorted_students[['фамилия', 'имя', 'дата_рождения']])
